package com.servlet;

import com.dao.EmployeeDAO;
import com.model.Employee;

import javax.servlet.*;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;

@WebServlet("/AddEmployeeServlet")
public class AddEmployeeServlet extends HttpServlet {
    private EmployeeDAO dao;

    public void init() {
        dao = new EmployeeDAO();
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        int empno = Integer.parseInt(request.getParameter("empno"));
        String name = request.getParameter("name");
        String doj = request.getParameter("doj");
        String gender = request.getParameter("gender");
        double salary = Double.parseDouble(request.getParameter("salary"));

        Employee newEmp = new Employee(empno, name, doj, gender, salary);

        try {
            boolean success = dao.addEmployee(newEmp);

            HttpSession session = request.getSession();
            if (success) {
                session.setAttribute("message", "‚úÖ Employee added successfully!");
            } else {
                session.setAttribute("message", "‚ö†Ô∏è Failed to add employee.");
            }

            // üîÅ Redirect to displayEmployees servlet after insertion
            response.sendRedirect("displayEmployees");

        } catch (Exception e) {
            request.setAttribute("message", "‚ùå Error occurred: " + e.getMessage());
            request.getRequestDispatcher("empadd.jsp").forward(request, response);
        }
    }
}
